<%if @ticket.new_record?%>
  <h1>New ticket</h1>
<%else%>
  <h1>Update ticket</h1>
<%end%>

<% remote_form_for(@ticket) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :size => "40x10" %>
  </p>
  <p>
    <%if @ticket.new_record?%>
      <%= f.submit 'Create' %>
    <%else%>
      <%= f.submit 'Update' %>
    <%end%>
  </p>
<% end %>
